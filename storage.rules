rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Evaluations folder - family-scoped file storage
    // Path: evaluations/{familyId}/{childId}/{filename}
    match /evaluations/{familyId}/{childId}/{allPaths=**} {
      // Allow read if authenticated (user will be validated via Firestore rules)
      allow read: if isAuthenticated();

      // Allow write if authenticated and file size is under 10MB
      // Family validation happens at the application layer
      allow write: if isAuthenticated()
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*')
                       || request.resource.contentType == 'application/pdf');

      // Allow delete if authenticated
      allow delete: if isAuthenticated();
    }
  }
}
